<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="@dimen/value_70dp"
    android:padding="@dimen/value_10dp">

    <ImageView
        android:id="@+id/adapterSearchCharacterImage"
        android:layout_width="@dimen/value_50dp"
        android:layout_height="@dimen/value_50dp" />

    <TextView
        android:id="@+id/adapterSearchCharacterName"
        android:layout_marginLeft="@dimen/value_10dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>